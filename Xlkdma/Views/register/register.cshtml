@model Xlkdma.Models.Customer
@{
    ViewBag.Title = "تسجيل عميل جديد";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="background-image:url('../Content/Images/popular 2.jpg');background-size:cover; width:1350px;height:1000px;background-position:center center;background-attachment:fixed ">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
            </div>
            <div class="col-lg-6 col-md-6 col-sm-12 col-4">

                <div style="background-color:#333;padding:30px;margin-top:80px;border-radius:10px; opacity:0.8">
                    <h2 style="color:#fff" class="text-center"> تسجيل دخول كعميل  </h2>
                    <form class="form-group text-right" method="post" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-lg-12">
                                <label style="color:#fff">  الاسم بالكامل </label>
                                <input type="text" name="customerName" class="form-control text-right" placeholder=" ادخل الاسم بالكامل  " />
                                <label style="color:#2f8f84;height:10px;width:40px">@Html.ValidationMessageFor(n => n.customerName)</label>
                            </div>
                            <div class="col-lg-12">
                                <label style="color:#fff">الرقم القومي   </label>
                                <input type="text" name="customerSsn" class="form-control text-right" placeholder="ادخل الرقم القومي  " />
                                <label style="color:#2f8f84;height:10px;width:140px">@Html.ValidationMessageFor(n => n.customerSsn)</label>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <label style="color:#fff">محل الاقامة </label>
                            <input type="text" name="customerCity" class="form-control text-right" placeholder="ادخل محل الاقامة " />
                            <label style="color:#2f8f84;height:10px;width:40px">@Html.ValidationMessageFor(n => n.customerCity)</label>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <label style="color:#fff"> تاكيد الرقم السري </label>
                                <input type="password" name="confirm_password" class="form-control text-right" placeholder=" تاكيد الرقم السري   " />
                                <label style="color:#2f8f84;height:10px;width:130px">@Html.ValidationMessageFor(n => n.confirm_password) </label>
                            </div>
                            <div class="col-lg-6">
                                <label style="color:#fff">الرقم السري </label>
                                <input type="password" name="customerPassword" class="form-control text-right" placeholder=" ادخل الرقم السري " />
                                <label style="color:#2f8f84;height:10px;width:40px">@Html.ValidationMessageFor(n => n.customerPassword)</label>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <label style="color:#fff">الايميل </label>
                            <input type="email" name="customerEmail" class="form-control " placeholder=" ادخل الابمبل " />
                            <label style="color:#2f8f84;height:10px;width:40px">@Html.ValidationMessageFor(n => n.customerEmail)</label>
                        </div>
                        <div class="col-lg-12">
                            <label style="color:#fff"> رقم التليفون  </label>
                            <input type="text" name="customerPhone" class="form-control text-right" placeholder=" ادخل رقم التليفون    " />
                            <label style="color:#2f8f84;height:10px;width:40px">@Html.ValidationMessageFor(n => n.customerPhone)</label>
                            <br />
                        </div>
                        <br />
                        <input type="submit" name="submit" value="تسجيل الدخول" class="btn btn-primary btn-block btn-lg" />
                    </form>
                </div>
            </div>
            <div class="col-lg-3">
            </div>
        </div>
    </div>
</div>


