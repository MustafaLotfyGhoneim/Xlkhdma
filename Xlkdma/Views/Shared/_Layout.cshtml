<body>



    <div id="home" class="intro">
        <!-- Start Nav Bar-->
        <header>
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo03" aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <a class="navbar-brand" href="~/home/index">Xlخdma</a>

                <div class="collapse navbar-collapse " style="text-align:right" id="navbarTogglerDemo03">
                    <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                        <li class="nav-item">

                            <a class="nav-link" href="~/home/about">من نحن</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="~/home/index" style="text-align:right">الرئيسية</a>
                        </li>

                        @if (Session["userId"] == null)
                        {

                            <li class="nav-item">
                                <a class="nav-link" href="~/home/log" target="_blank">دخول</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="~/home/index#register">تسجيل</a>
                            </li>
                        }
                        @if (Session["userId"] != null)
                        {

                            <li class="nav-item">
                                <a class="nav-link" href="~/home/index#service">الخدمات</a>
                            </li>


                            <li class="text-right" style="text-decoration-style:none;"><a href="/operation/logout" class="btn btn-dark text-white">خروج</a></li>
                        }
                        <li></li>
                    </ul>
                    @using (Html.BeginForm("search", "searchBox", FormMethod.Get))
                    {
                        @*<form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2 " type="search" placeholder="أكتب ما تبحث عنه" aria-label="بحث">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">بحث</button>
            </form>*@

                        <button type="submit" class="btn btn-info">
                        <span class="glyphicon glyphicon-search"></span> بحث</button>

                    }





                </div>
            </nav>
        </header>

        <!-- End Nav Bar -->

        @RenderBody()


        <!-- start footer -->



        <style>
            .footer {
                position: fixed;
                left: 0;
                bottom: 0;
                width: 100%;
                background-color: #121212;
                color: white;
                text-align: center;
            }
        </style>

        <div class="footer">
            <p>حقوق الطبع محفوظة ©2021 Xlخdma</p>
        </div>

        <!-- Footer end -->

        <script src="~/Scripts/jquery.js"></script>
        <script src="~/Scripts/jquery.validate.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
        <script src="~/Scripts/bootstrap.bundle.js"></script>
        <script src="~/Scripts/main.js"></script>

    </div>

</body>
</html>
