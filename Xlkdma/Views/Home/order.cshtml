@model Xlkdma.Models.Wait
@{
    ViewBag.Title = "order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div style="background-image:url('../Content/Images/popular 2.jpg');background-size:cover; width:1350px;height:1000px;background-position:center center;background-attachment:fixed ">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
            </div>
            <div class="col-lg-6 col-md-6 col-sm-12 col-4">

                <div style="background-color:#333;padding:30px;margin-top:80px;border-radius:10px; opacity:0.8">
                    <h2 style="color:#fff" class="text-center"> طلب الخدمة  </h2>
                    <form class="form-group text-right" method="post" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-lg-12">
                                <label style="color:#fff">  وصف الخدمة </label>

                                <input type="text" name="waitDesc" class="form-control text-right" placeholder=" وصف الخدمة" />

                            </div>
                            
                        </div>
                        <br /><br />
                              <div class="col-lg-12">
                                  <label style="color:#fff">الخدمة </label>

                                  @Html.DropDownListFor(n => n.waitName, (SelectList)ViewBag.skill)

                              </div>
                       
                   <br />
                        <input type="submit" name="submit" value="طلب" class="btn btn-primary btn-block btn-lg" />
                    </form>
                </div>
            </div>
            <div class="col-lg-3">
            </div>
        </div>
    </div>
</div>

