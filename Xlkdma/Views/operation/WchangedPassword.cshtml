@model Xlkdma.Models.WchangePassword
@{
    ViewBag.Title = "WchangedPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="background-image:url('../Content/Images/popular 2.jpg');background-size:cover; width:1350px;height:1000px;background-position:center center;background-attachment:fixed ">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
            </div>
            <div class="col-lg-6 col-md-6 col-sm-12 col-4">

                <div style="background-color:#333;padding:30px;margin-top:80px;border-radius:10px; opacity:0.8">
                    <h2 style="color:#fff" class="text-center"> تغيير كلمة المرور  </h2>
                    <form class="form-group text-right" method="post">
                        <div class="row">
                            <div class="col-lg-12">
                                <label style="color:#fff">  كلمة المرور القديمة </label>
                                <input type="password" name="oldPassword" class="form-control" placeholder="  ادخل كلمة المرور القديمة " />
                                <label style="color:#2f8f84;height:10px;width:40px">@Html.ValidationMessageFor(n => n.oldPassword)</label>
                            </div>
                            <div class="col-lg-12">
                                <label style="color:#fff">  كلمة المرور الجديدة </label>
                                <input type="password" name="newPassword" class="form-control" />
                                <label style="color:#2f8f84;height:10px;width:140px">@Html.ValidationMessageFor(n => n.newPassword)</label>
                            </div>
                            <div class="col-lg-12">
                                <label style="color:#fff">   تاكيد كلمة المرور الجديدة  </label>
                                <input type="password" name="confirmPassword" class="form-control" />
                                <label style="color:#2f8f84;height:10px;width:140px">@Html.ValidationMessageFor(n => n.confirmPassword)</label>
                            </div>
                        </div>
                        <br />
                        <input type="submit" name="submit" value="تحديث" class="btn btn-primary btn-block btn-lg" />
                        @if (ViewBag.mess != null)
                        {@ViewBag.mess;
                    }

                    </form>
                </div>
            </div>
            <div class="col-lg-3">
            </div>
        </div>
    </div>
</div>



