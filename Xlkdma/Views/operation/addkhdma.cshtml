@model Xlkdma.Models.WorkerSkill
@{
    ViewBag.Title = "إضافة خدمة جديدة";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="background-image:url('../Content/Images/popular 2.jpg');background-size:cover; width:1350px;height:1000px;background-position:center center;background-attachment:fixed ">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
            </div>
            <div class="col-lg-6 col-md-6 col-sm-12 col-4">

                <div style="background-color:#333;padding:30px;margin-top:80px;border-radius:10px; opacity:0.8">
                    <h2 style="color:#fff" class="text-center"> إضافة خدمة  </h2>
                    <form class="form-group text-right" method="post" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-lg-12">
                                <label style="color:#fff">  خدمة جديدة </label>
                                <input type="text" name="workerSkill1" class="form-control text-right" placeholder="خدمة جديدة  " />
                                <label style="color:#2f8f84;height:10px;width:40px">@Html.ValidationMessageFor(n => n.workerSkill1)</label>
                            </div>
                            <div class="col-lg-12">
                                <label style="color:#fff">سعر الخدمة   </label>
                                <input type="text" name="skillPrice" class="form-control text-right" placeholder="أدخل سعر الخدمة  " />
                                <label style="color:#2f8f84;height:10px;width:140px">@Html.ValidationMessageFor(n => n.skillPrice)</label>
                            </div>
                        </div>
                       
                        <br />
                        <input type="submit" name="submit" value="حفظ" class="btn btn-primary btn-block btn-lg" />
                    </form>
                </div>
            </div>
            <div class="col-lg-3">
            </div>
        </div>
    </div>
</div>



