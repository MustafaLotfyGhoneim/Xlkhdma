@using Xlkdma.Models
@model List<Wait>
@{
    ViewBag.Title = "قيد التنفيذ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-striped p-2">
    <tr>
        <th>الخدمة</th>
        <th>التفاصيل</th>
        <th>تاريخ الطلب</th>
        <th>رقم  تليفون العميل</th>
        <th>إسم العميل</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.waitName</td>
            <td>@item.waitDesc</td>
            <td>@item.waitDate</td>
            <td>@item.Customer.customerPhone</td>
            <td>@item.Customer.customerName</td>
            <td><a href="/operation/done/@item.waitId" class="btn btn-info">تمت</a></td>

        </tr>
    }
</table>

