@model Xlkdma.Models.WeditedData
@{
    ViewBag.Title = "تعديل بيانات صنايعى";
}

<div style="background-image:url('../Content/Images/popular 2.jpg');background-size:cover; width:1350px;height:1000px;background-position:center center;background-attachment:fixed ">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
            </div>
            <div class="col-lg-6 col-md-6 col-sm-12 col-4">

                <div style="background-color:#333;padding:30px;margin-top:80px;border-radius:10px; opacity:0.8">
                    <h2 style="color:#fff" class="text-center"> تعديل البيانات  </h2>
                    <form class="form-group text-right" method="post">
                        <div class="row">
                            <div class="col-lg-12">
                                <label style="color:#fff">  الاسم بالكامل </label>
                                <input type="text" name="workerName" class="form-control text-right" placeholder=" ادخل الاسم بالكامل  " />
                                <label style="color:#2f8f84;height:10px;width:40px">@Html.ValidationMessageFor(n => n.workerName)</label>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <label style="color:#fff">محل الاقامة </label>
                            <input type="text" name="workerCity" class="form-control text-right" placeholder="ادخل محل الاقامة " />
                            <label style="color:#2f8f84;height:10px;width:40px">@Html.ValidationMessageFor(n => n.workerCity)</label>
                        </div>
                        <div class="col-lg-12">
                            <label style="color:#fff">ارقم التليفون </label>
                            <input type="email" name="workerPhone" class="form-control text-right" placeholder=" ادخل رقم التليفون " />
                            <label style="color:#2f8f84;height:10px;width:40px">@Html.ValidationMessageFor(n => n.workerPhone)</label>
                        </div>
                        <div class="col-lg-12">
                            <label style="color:#fff"> سعر الخدمة   </label>
                            <input type="text" name="jobPrice" class="form-control text-right" placeholder=" ادخل سعر الخدمة    " />
                            <label style="color:#2f8f84;height:10px;width:40px">@Html.ValidationMessageFor(n => n.jobPrice)</label>
                            <br />
                        </div>
                       
                            <div class="col-lg-12">
                                <label style="color:#fff"> نوع الوظيفة </label>
                                <br />
                                <select name="jobId" style="color:#000 ;height:38px;width:140px">
                                    <option value="0" selected>اختر وظيفة...</option>
                                    @foreach (var item in (List<Xlkdma.Models.Job>)ViewBag.jobss)
                                    {
                                        <option value="@item.jobId">@item.jobName</option>
                                    }
                                </select>
                                <label style="color:#2f8f84;height:10px;width:30px"> @Html.ValidationMessageFor(n => n.jobId) </label>


                            </div>
                            <br />
                            <input type="submit" name="submit" value="تحديث" class="btn btn-primary btn-block btn-lg" />
</form>
                </div>
            </div>
            <div class="col-lg-3">
            </div>
        </div>
    </div>
</div>


